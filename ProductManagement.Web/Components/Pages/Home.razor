@page "/"

<PageTitle>ProductHub - Dashboard</PageTitle>

<div class="hero-section mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold text-gradient mb-3">
                    Welcome to <span class="text-warning">ProductHub</span>
                </h1>
                <p class="lead fs-4 mb-4 text-muted">
                    Your modern product management solution built with cutting-edge technology stack for maximum performance and scalability.
                </p>
                <a href="/products" class="btn btn-primary btn-lg rounded-pill px-4 py-3 shadow-lg">
                    <span class="bi bi-rocket-takeoff me-2"></span>
                    Get Started
                </a>
            </div>
            <div class="col-lg-4 text-center">
                <div class="feature-icon-large">
                    <span class="bi bi-layers-fill"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg h-100 gradient-card">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-wrapper me-3">
                            <span class="bi bi-box-seam-fill fs-3"></span>
                        </div>
                        <div>
                            <h4 class="card-title mb-1 fw-bold">Product Management</h4>
                            <p class="text-muted mb-0">Complete CRUD operations</p>
                        </div>
                    </div>
                    <p class="card-text mb-4">
                        Efficiently manage your entire product inventory with our intuitive interface. 
                        Create, view, edit, and delete products with real-time data persistence in PostgreSQL.
                    </p>
                    <div class="row g-3 mb-4">
                        <div class="col-6">
                            <div class="feature-item">
                                <span class="bi bi-check-circle-fill text-success me-2"></span>
                                <small>Real-time Updates</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="feature-item">
                                <span class="bi bi-check-circle-fill text-success me-2"></span>
                                <small>Data Validation</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="feature-item">
                                <span class="bi bi-check-circle-fill text-success me-2"></span>
                                <small>Search & Filter</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="feature-item">
                                <span class="bi bi-check-circle-fill text-success me-2"></span>
                                <small>Responsive Design</small>
                            </div>
                        </div>
                    </div>
                    <a href="/products" class="btn btn-outline-primary rounded-pill">
                        <span class="bi bi-arrow-right me-1"></span>
                        Manage Products
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-lg h-100 tech-stack-card">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-wrapper me-3">
                            <span class="bi bi-cpu-fill fs-3 text-info"></span>
                        </div>
                        <h5 class="card-title mb-0 fw-bold">Tech Stack</h5>
                    </div>
                    <div class="tech-stack-list">
                        <div class="tech-item">
                            <span class="bi bi-lightning-charge-fill text-primary me-2"></span>
                            <span>.NET 8 Aspire</span>
                        </div>
                        <div class="tech-item">
                            <span class="bi bi-window-stack text-info me-2"></span>
                            <span>Blazor Server</span>
                        </div>
                        <div class="tech-item">
                            <span class="bi bi-hdd-network-fill text-success me-2"></span>
                            <span>FastEndpoints API</span>
                        </div>
                        <div class="tech-item">
                            <span class="bi bi-database-fill text-primary me-2"></span>
                            <span>PostgreSQL</span>
                        </div>
                        <div class="tech-item">
                            <span class="bi bi-gear-fill text-warning me-2"></span>
                            <span>Dapper ORM</span>
                        </div>
                        <div class="tech-item">
                            <span class="bi bi-bootstrap-fill text-purple me-2"></span>
                            <span>Bootstrap 5</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-12">
            <div class="stats-section">
                <div class="row g-4">
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon">
                                <span class="bi bi-box-seam-fill"></span>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">∞</h3>
                                <p class="stat-label">Products</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon">
                                <span class="bi bi-lightning-charge-fill"></span>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">99.9%</h3>
                                <p class="stat-label">Uptime</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon">
                                <span class="bi bi-shield-check-fill"></span>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">100%</h3>
                                <p class="stat-label">Secure</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon">
                                <span class="bi bi-speedometer2"></span>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">Fast</h3>
                                <p class="stat-label">Performance</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 4rem 0;
        margin: -1rem -15px 3rem -15px;
        border-radius: 0 0 2rem 2rem;
    }
    
    .text-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .feature-icon-large {
        width: 150px;
        height: 150px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        backdrop-filter: blur(10px);
    }
    
    .feature-icon-large .bi {
        font-size: 4rem;
        color: #ffc107;
    }
    
    .gradient-card {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        border-left: 4px solid #667eea;
    }
    
    .tech-stack-card {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.05) 0%, rgba(255, 87, 34, 0.05) 100%);
        border-left: 4px solid #ffc107;
    }
    
    .icon-wrapper {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }
    
    .tech-item {
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        display: flex;
        align-items: center;
    }
    
    .tech-item:last-child {
        border-bottom: none;
    }
    
    .feature-item {
        display: flex;
        align-items: center;
    }
    
    .stats-section {
        background: rgba(0,0,0,0.02);
        padding: 2rem;
        border-radius: 1rem;
    }
    
    .stat-card {
        background: white;
        padding: 1.5rem;
        border-radius: 1rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
    }
    
    .stat-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        color: white;
        font-size: 1.5rem;
    }
    
    .stat-number {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .stat-label {
        color: #6c757d;
        margin-bottom: 0;
        font-weight: 500;
    }
    
    .text-purple {
        color: #6f42c1 !important;
    }
</style>
